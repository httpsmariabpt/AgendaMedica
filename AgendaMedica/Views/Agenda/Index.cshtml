@model IEnumerable<AgendaMedica.Models.Agenda>

@{
    ViewData["Title"] = "Index";
}

<div class="cantainer text-dark">
<h1 class="text-center display-5">Cadastro de <span class="fw-bold">Agendamento</span></h1>


<p>
    <a asp-action="Create" class="btn btn-outline-dark btn-lg w-25">Adicionar Novo Agendamento.</a>
</p>
<table class="table table-dark tsble-striped table-borderless">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataConsulta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.PacienteId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medico.MedicoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataConsulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a class="btn btn-outline-light btn-sm me-2" asp-action="Edit" asp-route-id="@item.AgendaId">Editar</a> 
                <a asp-action="Delete" asp-route-id="@item.AgendaId">Deletar</a>
        </tr>
}
    </tbody>
</table>
</div>